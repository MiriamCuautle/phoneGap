<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0" 
        id = "com.site.Hoteles"
        version = "0.0.1">
    <name>Hoteles</name>

    <description>
        Practica 1 de Phonegap
    </description>

    <author href="http://cenet.mx" email="cansys60@hotmail.com">
        Miriam Cuautle
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.3.0" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />

    <icon src="img/logo.jpg" />
    <icon src="img/logo.jpg" gap:platform="android" gap:density="ldpi" />
    <icon src="img/logo.jpg" gap:platform="android" gap:density="mdpi" />
    <icon src="img/logo.jpg" gap:platform="android" gap:density="hdpi" />
    <icon src="img/logo.jpg" gap:platform="android" gap:density="xhdpi" />
    <icon src="img/logo.jpg" gap:platform="ios" width="57" height="57" />
    <icon src="img/logo.jpg" gap:platform="ios" width="72" height="72" />
    <icon src="img/logo.jpg" gap:platform="ios" width="114" height="114" />
    <icon src="img/logo.jpg" gap:platform="ios" width="144" height="144" />

    <gap:splash src="img/pantallainicio.jpg" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="ios" width="768" height="1024" />
    <gap:splash src="img/pantallainicio.jpg" gap:platform="ios" width="1024" height="768" />
	<access origin="*" />
	
	<!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
	<preference name="permissions" value="none"/>
	
	<!-- to enable individual permissions use the following examples -->
	<feature name="http://api.phonegap.com/1.0/battery"/>
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
</widget>